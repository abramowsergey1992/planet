<div class="podcasts-recent">
    {%
        set recent = [
            {
                'title': 'Сумерки в самую короткую ночь года',
                'episode': '14',
                'days': '2',
                'img': 'img/about-10.jpg'
            },
            {
                'title': 'Теория большого взрыва',
                'episode': '3',
                'days': '5',
                'img': 'img/about-9.jpg'
            },
            {
                'title': 'Что мы знаем о кометах?',
                'episode': '14',
                'days': '2',
                'img': 'img/about-11.jpg'
            }
        ]
    %}

    <div class="swiper js-podcasts-recent">
        <div class="swiper-wrapper">  
            {% for item in recent %}
                <div class="swiper-slide">
                    <a class="podcast-recent" href="podcast.html">
                        <div class="podcast-recent__inner">
                            <div class="podcast-recent__img">
                                <div class="podcast-recent__img-inner" style="background-image: url('{{ item.img }}')"></div>
                                <div class="podcast-recent__play"></div>
                            </div>
                            <div class="podcast-recent__content">
                                <div class="podcast-recent__title">{{ item.title }}</div>
                                <div class="podcast-recent__content-bottom">
                                    <div class="podcast-recent__episode">{{ item.episode }} выпуск</div>
                                    <div class="podcast-recent__date">Обновлено: {{ item.days }} дн назад</div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

