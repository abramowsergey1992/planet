{% extends "pages/_includes/layout.njk" %} {% block title %}Планетарий{%
endblock %} {% block bodyclass %}page-home theme-dark{%
endblock %} {% block main %}

<div class="hp-promo">
    <div class="inner hp-promo__titles">
        <h1 class="hp-promo__title">Московский планетарий</h1>
        <h2 class="hp-promo__subtitle">Мультиформатный научно&#8209;просветительский центр</h2>
    </div>

    <div class="hp-space _show-sun">
        <div class="hp-space__sun">
            <div class="hp-space__sun-inner"></div>
        </div>
        <div class="hp-space__earth">
            <div class="hp-space__earth-inner"></div>
        </div>
        <div class="hp-space__moon">
            <div class="hp-space__moon-inner"></div>
        </div>

        <div class="hp-space__shadow-1"></div>
        <div class="hp-space__shadow-2"></div>

        <div class="hp-space__circles">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
</div>

<div class="hp-video js-hp-video">
    <div class="hp-video__inner">
        <h2 class="hp-video__title">О Планетарии</h2>
        <a href="about.html" class="hp-video__details">
            <span>Узнать больше о планетарии</span>
        </a>
    </div>

    <button class="hp-video__play">
        <span>Play</span>
    </button>

    <div class="hp-video__video">
        <video src="./content/planetarium.mp4"
               loop
               preload="metadata"
               muted
               poster="./content/video-planetarium-poster.webp"
        >
        </video>
    </div>
</div>


{% endblock %}
